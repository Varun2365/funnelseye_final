              "host": ["{{host}}"],
              "path": ["api", "central-messaging", "v1", "admin", "email", "status"]
            }
          },
          "response": []
        },
        {
          "name": "Test Email Config (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{adminToken}}" }
            ],
            "url": {
              "raw": "{{host}}/api/central-messaging/v1/admin/email/test",
              "host": ["{{host}}"],
              "path": ["api", "central-messaging", "v1", "admin", "email", "test"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"testEmail\": \"admin@example.com\"\n}"
            }
          },
          "response": []
        },
        {
          "name": "Get Templates (Admin)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{adminToken}}" }
            ],
            "url": {
              "raw": "{{host}}/api/central-messaging/v1/templates",
              "host": ["{{host}}"],
              "path": ["api", "central-messaging", "v1", "templates"]
            }
          },
          "response": []
        }
      ]
    }
  ],
